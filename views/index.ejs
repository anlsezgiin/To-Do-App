<%- include('partials/header') %>
<div class="d-xl-flex flex-column justify-content-center align-items-center pt-3">
    <h1 class="text-danger">Welcome to Esdeath's To-Do App</h1>
    <h2 class="text-info">Remember, Esdeath always watching you!</h2>
</div>

<div class="main-container d-flex flex-column justify-content-center align-items-center">
    <div class="date-container mt-3">
        <p class="date"><%= date %></p>
    </div>
    <div class="list-container">
        <% for(var i = 0; i < listItems.length; i++){ %>
            <div class="item">
              <input type="checkbox">
              
                <%= listItems[i] %>
              
            </div>
            <% } %>
        
            <form class="item" action="/" method="post">
              <input type="text" name="newTodo" placeholder="New Item" autocomplete="off">
              <button type="submit" name="listSubmit">+</button>
            </form>
    </div>
</div>
<script src="index.js"></script>
